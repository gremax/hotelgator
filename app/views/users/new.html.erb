<h1>Sign up</h1>

<%= form_for @user, url: signup_path do |f| %>

  <% if @user.errors.any? %>
    Form contains <%= pluralize(@user.errors.count, "error") %>:
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  
  <%= f.submit "Sign up" %>
  
<% end %>
