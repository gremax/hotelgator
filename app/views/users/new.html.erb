<h1>Sign up</h1>

<%= form_for @user, url: signup_path, html: { class: "form" } do |f| %>

  <%= render 'error' %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Sign up" %>

<% end %>
