<% provide(:title, "Add hotel") %>
<h1>Add hotel</h1>

<%= form_for @hotel, html: { class: "form", multipart: "true" } do |f| %>

  <%= render 'error' %>
  
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :rating %>
  <div class="radio_inline">
    <% ['5', '4', '3', '2', '1'].each do |star| %>
      <%= f.radio_button :rating, star, checked: (star == '5') %> <%= star %>
    <% end %>
  </div>
  
  <%= f.label :breakfast, "Breakfast included?" %>
  <%= f.check_box :breakfast %>
  
  <%= f.label :room_description %>
  <%= f.text_area :room_description %>
  
  <%= f.label :price, "Room price, $" %>
  <%= f.number_field :price %>
  
  <%= f.label :picture %>
  <%= f.file_field :picture %>
  
  <%= f.fields_for :address do |address_form| %>

    <%= address_form.label :country %>
    <%= address_form.text_field :country %>

    <%= address_form.label :state %>
    <%= address_form.text_field :state %>

    <%= address_form.label :city %>
    <%= address_form.text_field :city %>
    
    <%= address_form.label :street %>
    <%= address_form.text_field :street %>

  <% end %>
  
  <%= f.submit "Add hotel" %>

<% end %>
